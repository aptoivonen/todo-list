{{#each todos}}
  <li class="item todo-item" data-id="{{id}}">
    <div class="priority-{{lowercase priority}}">
    </div>
    <span class="todo-item-title">
      {{title}}
    </span>
    <span class="todo-item-duedate">
      {{#if dueDate}}
        {{formatdate dueDate}}
      {{else}}
        -
      {{/if}}
    </span>
    <button class="delete-btn todo-item-delete-btn" type="button" data-button="todo-delete-button"></button>
  </li>
{{/each}}